<UserControl x:Class="LChess.Views.Contents.ChessGameContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:LChess.Custom.UI.Unit;assembly=LChess.Custom"
             xmlns:cvt="clr-namespace:LChess.Util.Converter;assembly=LChess.Util">

    <UserControl.Resources>

        <Style x:Key="CurrentTurnTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
        </Style>

        <Style x:Key="GameButtonStyle" TargetType="{x:Type ui:LChessButton}">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
        </Style>

        <cvt:StringMatchToVisibilityConverter x:Key="StringMatchToVisibilityConverter"/>

        <cvt:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <cvt:BooleanToReverseVisibilityConverter x:Key="BooleanToReverseVisibilityConverter"/>

    </UserControl.Resources>
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Column="0"
                        Content="{Binding ChessBoardContent}"/>

        <Grid Grid.Column="1"
              Background="SteelBlue">

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10"
                        Visibility="{Binding IsEndGame, Converter={StaticResource BooleanToReverseVisibilityConverter}}">

                <TextBlock Style="{StaticResource CurrentTurnTextBlockStyle}"
                           Text="현재순서 : "/>

                <TextBlock Style="{StaticResource CurrentTurnTextBlockStyle}"
                           Visibility="{Binding CurrentTurn, Converter={StaticResource StringMatchToVisibilityConverter}, ConverterParameter=White}"
                           Foreground="White"
                           Text="백"/>

                <TextBlock Style="{StaticResource CurrentTurnTextBlockStyle}"
                           Visibility="{Binding CurrentTurn, Converter={StaticResource StringMatchToVisibilityConverter}, ConverterParameter=Black}"
                           Text="흑"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10"
                        Visibility="{Binding IsEndGame, Converter={StaticResource BooleanToVisibilityConverter}}">

                <TextBlock Style="{StaticResource CurrentTurnTextBlockStyle}"
                           Visibility="{Binding Winner, Converter={StaticResource StringMatchToVisibilityConverter}, ConverterParameter=White}"
                           Foreground="White"
                           Text="백 "/>

                <TextBlock Style="{StaticResource CurrentTurnTextBlockStyle}"
                           Visibility="{Binding Winner, Converter={StaticResource StringMatchToVisibilityConverter}, ConverterParameter=Black}"
                           Text="흑 "/>

                <TextBlock Style="{StaticResource CurrentTurnTextBlockStyle}"
                           Text="승리!"/>

            </StackPanel>

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Background="#4F93CC">

                <ItemsControl ItemsSource="{Binding History}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            
                            <Border Background="#5AA8E8"
                                    CornerRadius="5"                                         
                                    Margin="5">
                                
                                <TextBlock Text="{Binding}"  
                                           Foreground="LightCyan"
                                           Margin="10"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                                
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                </ItemsControl>


            </ScrollViewer>

            <StackPanel Grid.Row="2">

                <ui:LChessButton Content="기권"
                                 Style="{StaticResource GameButtonStyle}"
                                 Command="{Binding ResignCommand}"
                                 Visibility="{Binding IsEndGame, Converter={StaticResource BooleanToReverseVisibilityConverter}}"/>

                <ui:LChessButton Content="새 게임"
                                 Style="{StaticResource GameButtonStyle}"
                                 Command="{Binding NewGameCommand}"
                                 Visibility="{Binding IsEndGame, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <ui:LChessButton Content="분석"
                                 Style="{StaticResource GameButtonStyle}"
                                 Command="{Binding MoveToAnalysisCommand}"
                                 Visibility="{Binding IsEndGame, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <ui:LChessButton Content="홈으로"
                                 Style="{StaticResource GameButtonStyle}"
                                 Command="{Binding MoveToHomeCommand}"/>

            </StackPanel>

        </Grid>

    </Grid>
    
</UserControl>
